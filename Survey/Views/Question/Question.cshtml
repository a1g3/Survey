@model QuestionViewModel
@{
    ViewData["Title"] = "Question";
}

<link href="~/css/question.min.css" rel="stylesheet" />

<div id="instructions">
    <h6>@Model.Question</h6>
</div>
<form asp-controller="Question" asp-action="Submit" method="post">
    <div @(Model.Options.Count <= 2 ? "id=optionsBox" : "id=bigOptionsBox")>
        @{
            foreach (var option in Model.Options)
            {
                <label class="inputContainer">
                    @option
                    <input type="radio" name="response" value="@option" required />
                    <span class="checkmark"></span>
                </label>
            }
        }

    </div>

    <input type="hidden" name="userId" id="userId" value="@Model.userId" />
    <input type="submit" class="btn btn-primary" value="Next >" />
</form>