@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="Index">
    <div class="form-group row">
        <label for="firstname" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" required id="firstname" asp-for="FirstName" placeholder="John">
        </div>
    </div>
    <div class="form-group row">
        <label for="birthdate" class="col-sm-2 col-form-label">Birth Date</label>
        <div class="col-sm-10">
            <input class="form-control" type="date" required id="birthdate" asp-for="BirthDate">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">
        Next
    </button>

    <div class="modal fade" id="acknowledgementModal" tabindex="-1" role="dialog" aria-labelledby="acknowledgementModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="acknowledgementModalCenterTitle">Acknowledgement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    This survey asks for basic information like first name and birthdate for the purpose of tracking your progress throughout the survey. We ask that you provide truthful information in order to get accurate results. At any point, if you do not wish to participate in the survey, please close this window and wait quietly.
                    <br /><br />
                          <b>By clicking the "Continue" button, you acknowledge that you are taking part in this voluntary survey.</b>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" data-dismiss="modal">Continue</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="~/js/home.es5.min.js" type="text/javascript"></script>
